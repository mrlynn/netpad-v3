# MongoDB Connection
# Required: Your MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=netpad_app

# Application URL (used for callbacks and links)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Standalone mode flag (set automatically by deployment)
STANDALONE_MODE=true

# Optional: Session secret for authentication features
# SESSION_SECRET=your-session-secret-min-32-chars

# Optional: Vault encryption key for secure storage
# VAULT_ENCRYPTION_KEY=your-base64-encoded-32-byte-key
